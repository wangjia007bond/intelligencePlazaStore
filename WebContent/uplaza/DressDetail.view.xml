			<!--  <Image class="dressCart" src="image/04dress_cart.png" densityAware="false"/> -->
			<core:Icon class="appCart" src="sap-icon://cart-4" size="1.3rem" color="#FFFFFF" />
			
			<Image class="dressDot1 Bottom" src="image/04dress_dotun.png" densityAware="false" />
			<Image id="dot1" class="dressDot1 Top" src="image/04dress_dotselected.png" densityAware="false" press="onDot1"/>
			<Image class="dressDot2 Bottom" src="image/04dress_dotun.png" densityAware="false"/>
			<Image id="dot2" class="dressDot2 Top" src="image/04dress_dotselected.png" densityAware="false" press="onDot2"/>
