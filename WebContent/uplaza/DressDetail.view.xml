<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="uplaza.DressDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<!-- 这个界面已经废弃了 -->
	<Page id="DressDetail" showHeader="false" enableScrolling="false" showFooter="false" >
		<content>
	    	<Image src="image/04 dress_bg.png" mode="Background" width="375px" height="627px"  densityAware="false"/> 			
		    <Image class="appFooter" src="image/Rectangle 18@2x.png" width="375px" height="52px" densityAware="false"/>
		 <!--  <Image class="appLogo" src="image/U Plaza@2x.png" width="67px" height="16px" densityAware="false" press="onFlip"/>  -->  
			<Image class="appStore" src="image/store_b@2x.png" width="28px" height="31px" densityAware="false" />
			<Image class="appGame" src="image/game_g@2x.png" width="30px" height="31px" densityAware="false" press="onGame"/>
