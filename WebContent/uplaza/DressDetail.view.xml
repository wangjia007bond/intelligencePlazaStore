			<Text class="dressPrice" text="19,9" /> 
			<Text class="dressUnit" text="EUR" />
				
			<core:HTML 
			content='
			&lt;div class=&quot;appLogo&quot; onclick=&apos;document.querySelector(&quot;#myCard&quot;).classList.toggle(&quot;flip&quot;)&apos;&gt;
			&lt;img src=&quot;image/U Plaza@2x.png&quot; alt=&quot;Ballade&quot; width=&quot;67px&quot; height=&quot;16px&quot;&gt;
			&lt;/img&gt;	
			'>
			</core:HTML>
			
			<core:HTML 
			content='
			&lt;div id=&quot;myCard&quot; class=&quot;flip-container&quot;&gt;
